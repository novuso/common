{
    "name": "novuso/common",
    "description": "Novuso Common Library",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "ext-intl": "*",
        "novuso/system": "^2.0",
        "psr/container": "1.* | 2.*",
        "psr/http-message": "1.*",
        "psr/log": "1.* | 2.* | 3.*"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.0",
        "mikey179/vfsstream": "^1.6",
        "mockery/mockery": "^1.4",
        "monolog/monolog": "^2.0",
        "phpunit/phpunit": "^9.4",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/finder": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Novuso\\Common\\": "src"
        },
        "files": [
            "inc/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Novuso\\Common\\Test\\": "tests"
        }
    },
    "config": {
        "platform": {
            "php": "8.0.0",
            "ext-intl": "8.0.0"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
